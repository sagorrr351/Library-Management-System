<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="librarymanagment.HomeController">

    <!-- Top Bar -->
    <top>
        <HBox spacing="10" style="-fx-background-color: #2C3E50;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Library Management System" textFill="WHITE">
                <font>
                    <Font name="Arial Bold" size="20"/>
                </font>
            </Label>
        </HBox>
    </top>

    <!-- Side Menu -->
    <left>
        <VBox spacing="10" style="-fx-background-color: #34495E;">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <Button text="Dashboard" fx:id="btnDashboard" prefWidth="150"/>
            <Button text="Manage Books" fx:id="btnBooks" prefWidth="150"/>
            <Button text="Manage Members" fx:id="btnMembers" prefWidth="150"/>
            <Button text="Issue Book" fx:id="btnIssue" prefWidth="150"/>
            <Button text="Return Book" fx:id="btnReturn" prefWidth="150"/>
            <Button text="Exit" fx:id="btnExit" prefWidth="150"/>
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <StackPane>
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <VBox alignment="CENTER" spacing="15">
                <Label text="Welcome to the Library Management System">
                    <font>
                        <Font name="Arial" size="18"/>
                    </font>
                </Label>
                <Label text="Use the menu on the left to navigate through the system."/>
                <HBox alignment="CENTER" spacing="10">
                    <Button text="Login" fx:id="btnLogin" prefWidth="100"/>
                    <Button text="Sign Up" fx:id="btnSignUp" prefWidth="100"/>
                </HBox>
            </VBox>
        </StackPane>
    </center>

</BorderPane>
